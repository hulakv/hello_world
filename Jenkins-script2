pipeline {
    agent any
    
    environment {
        PATH = "/opt/apache-maven-3.6.3/bin:$PATH"
    }
    
    stages {
        stage("Git Checkout") {
            steps {
                git 'https://github.com/hulakv/hello_world.git'
            }
        }
        stage ("Maven Buid") {
            steps {
                sh "mvn clean package"
            }
        }
        
        stage ("Copy webbapp") {
            steps {
            sshPublisher(publishers: [sshPublisherDesc(configName: 'Docker-ec2-user', transfers: [sshTransfer(execCommand: '''/opt/tomcat/bin/shutdown.sh /opt/tomcat/bin/startup.sh''', remoteDirectory: '/opt/tomcat/webapps/', removePrefix: '/webapp/target/', sourceFiles: 'webapp/target/*.warâ€™)])])
            
            }
        }
        
        
   }
 
 }
