pipeline {
    agent any
    
    environment {
        PATH = "/opt/apache-maven-3.6.3/bin:$PATH"
    }
    
    stages {
        stage('Git Checkout') {
            steps {
                git credentialsId: 'github', url: 'https://github.com/hulakv/hello_world'
            }
        }
        stage ("Maven Buid") {
            steps {
                sh "mvn clean package"
            }
        }
   }
 
 }
 
